@import "normalize.css"

body
    font-family: Arial, Helvetica, sans-serif
#root
    position: relative
    z-index: 0
    width: 300 px
    margin-left: auto
    margin-right: auto
    padding: 20px
    background: floralwhite 
.header
    width: 150px
    text-align: center
    &--centered
        margin: 0 auto
.buttons
    width: 150px
    &--centered
        margin: 0 auto
    &--spaced
        display: flex
        justify-content: space-around
.button
    margin-top: 10px
    cursor: pointer
    width: 30px
    height: 30px
    font-weight: bold
    display: flex
    align-items: center
    justify-content: center
    user-select none
    position: relative
    &:before
        z-index: -1
        content: ""
        display: block
        position: absolute
        width: 30px
        height: 30px
        top: 0
        left: 0
        background: crimson
        border-radius: 50%
    &--minus:before
        background-color: cornflowerblue
    &--reset
        width: 60px
        border-radius: 5px
        &:before
            width: 60px
            border-radius: 5px
            background-color: greenyellow
    &--centered
        margin-left: auto
        margin-right: auto
    &:hover:before
        transform: scale(1.15)    